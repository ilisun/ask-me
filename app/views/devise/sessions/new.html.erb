<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="row featured-boxes login">
        <div class="featured-box featured-box-secundary default">
          <div class="box-content">
            <h4>LOG IN</h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <div class="form-group">
                  <div class="col-md-12">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: 'form-control input-lg', autofocus: true %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="form-group">
                  <div class="col-md-12">
                    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right' %>
                    <%= f.label :password %>
                    <%= f.password_field :password, class: 'form-control input-lg', autocomplete: "off" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <span class="remember-box checkbox">
                    <% if devise_mapping.rememberable? %>
                      <%= f.label :remember_me %>
                      <%= f.check_box :remember_me %>
                    <% end %>
                  </span>
                </div>
                <div class="col-md-6">
                  <%= f.submit "Log in", class: 'btn btn-primary pull-right push-bottom', 'data-loading-text': 'Loading...' %>
                </div>
              </div>
              <%= render "devise/shared/links" %>

          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

