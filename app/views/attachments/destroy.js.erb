<% if @attachment.errors.present? %>
  <% @attachment.errors.full_messages.each do |message| %>
    $('.body').prepend('<%= j render 'layouts/flash_messages' %>');
  <% end %>
<% else %>
  $('.destroy-attach-link').click(function(e) {
    var attach_id;
    e.preventDefault();
    attach_id = $(this).data('attachId');
    $('li#attach-' + attach_id).remove();
  });
  $('.body').prepend('<%= j render 'layouts/flash_messages' %>');
<% end %>
